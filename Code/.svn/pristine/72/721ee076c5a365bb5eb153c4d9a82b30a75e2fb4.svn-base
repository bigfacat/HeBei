.clearfix:after { content:"."; display:block; height:0; visibility:hidden; clear:both; }                                                             //伪类清除
.clearfix { zoom:1; }    
body{
	font-family: "Microsoft YaHei";
}
.fw-b{
	font-weight: bold;
}
p{
	text-indent: 2em;
}
.main-content .container .row h2{
	font-size: 28px;
}
.main-content .container .row h2 a{
	font-size: 12px;
	margin-left: 50px;
	text-decoration: underline;
}
.main-content .container .row h3{
	font-size: 24px;
}
.main-content .container .row h4{
	font-size: 20px;
	padding-top: 10px;
}
.main-content .container .row h5{
	margin-left: 15px;
	margin-top:15px;
	font-size: 18px;
	font-weight: 700;
}
.main-content .container .row h6{
	margin-left: 30px;
	margin-top:15px;
	font-size: 16px;
	font-weight: 700;
}
.main-content .container .row p{
	max-width: 900px;
	font-size: 16px;
	line-height: 30px;
	margin: 10px 0;
}
.main-content .container .row img{
	max-width: 900px;
	border:1px #ddd solid;
	margin-bottom: 15px;
}
.col-md-10{
	width: 80%;
}
.suojin{
	padding-left: 35px;
}
.title{
	text-align: center;
	margin:50px auto;
}
a i{
	margin-right: 10px;
}

#main-nav li{
	border: 1px #e6e6e6 solid;
	width: 230px;
}
#main-nav li a{
	height: 40px;
}
#main-nav .secondmenu li{

	border: none;
	margin: 0;
	border-radius: 0;
}

#main-nav .secondmenu li a{
	white-space:nowrap; 
	margin-left: 10px;
	overflow: hidden;
	text-overflow: ellipsis;
}
.secondmenu li a:hover{
	border-left: 3px #4a78cd solid;
}
.secondmenu li:focus{
	border-left: 3px #4a78cd solid;
}
.thirdmenu li a{
	margin-left:30px !important;
}
.nav-tabs li a{
	margin-right: 0;
}
#main-nav li .glyphicon{
	margin-left: 20px;
}
#downLoad{
	font-size: 15px;
	text-decoration: underline;
	margin-left: 100px;
	color: #000;
}
.fixed-nav{
	position: fixed;
	overflow-y: scroll;
	overflow-x: hidden;
	margin-top: 50px;
	max-height: 80%;
}
.toRight{
	float: right;
}
.active{
	text-decoration: none;
	background-color: #eee;
	border-left: 3px #4a78cd solid;
}
table.common-table tr td,table.common-table tr th{
	border:1px solid #000000;
	border-collapse: collapse;
	text-align: center;
	padding: 5px;
}
table.common-table{
	margin-top: 20px;
	width: 800px;
}
img{
	display: block;
    margin: 0 auto;
}