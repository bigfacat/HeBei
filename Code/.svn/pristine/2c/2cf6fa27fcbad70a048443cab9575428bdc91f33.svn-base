/**文本操作*/
.text_ellipsis{
	overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

#banner-search{
  border: 1px solid #ccc;
  border-radius: 4px;
  padding-left: 4px;
}

#banner-search:focus{
  border: 1px solid #2d9cfe;
}

/*纳税人身份对话框列表*/

#taxpayerListInfo li {
  height: 36px;
  background-color: #f6f6f6;
  border: 1px solid #efeff0;
  line-height: 36px;
  margin: 10px 0;
  list-style: none;
  padding:0 40px;
  text-align: center;
}

.option-checked {
  background-color: #fff !important;
  border: 1px solid #1a56a9;
  color: #1a56a9;
  background-image: url(../../images/taxpayerListInfo.gif);
  background-position: right bottom;
  background-repeat: no-repeat;
}

#taxpayerListInfo p{
  font-weight: bolder;
  font-size: 14px;
}