/*----------填---表---说---明-----lizm--------*/
.tbsmContent{
    padding: 10px;
    line-height: 22px;
    text-align: left;
}
.tips{
    width: 500px; /*不能随意改变，影响提示信息位置的计算*/
    height: auto !important;
    margin: 0 auto;
    position: absolute !important;
    top: 30px;
    border-radius: 4px;
    line-height: 22px;
    /*box-shadow: 0px 1px 5px 2px #000;*/
    background: #F6FAFF;
    display: none;
    border: 1px #848A90 solid;
    color: #000 !important;
    white-space:normal !important;
    overflow: visible !important;
}
.upTriangle{
    display: block;
    width: 22px;
    height: 22px;
    background: url("img/arrow-up.png");
    position: absolute !important;
    top: -17px !important;
}
.downTriangle{
    display: block;
    width: 22px;
    height: 22px;
    background: url("img/arrow-down.png");
    display: none ;
    position: absolute !important;
    top: 37px;
}
.hideTips{
    height: 0 !important;
    padding: 0 !important;
    margin: 0 !important;
    border: none !important;
}
