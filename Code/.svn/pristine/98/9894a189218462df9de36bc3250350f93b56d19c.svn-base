
html,body{
    background-color: #f7f7f7;
    margin: 0;
    padding: 0;
}

.header-container{
    background-color: #ffffff;
}

.wkc-bg{
    background: #0092db url('../images/wkc-bg.png') no-repeat top center;
    height: 166px;
}
.wkc-content{

}
.wkc-content .container{
    width: 1200px;
    height: 100%;
    min-width: 1200px;
    padding: 30px 0;
    margin: 0 auto;
}

.container .footer{
    margin: 10px 0;
}
.container .footer ul {
    text-align: center;
}

.container .footer ul > li {
    display: inline-block;
    padding-right: 20px;
    vertical-align: middle;
}

.container .footer ul > li a {
    color: #666666;
    font-size: 14px;
}

.container .footer ul > li a:hover {
    text-decoration: underline;
}

.wkc-content .container .wkc-modules{
    height: 45px;
    background-color: #fff;
}
.wkc-content .container .wkc-slides{
    margin-top: 30px;
}
.wkc-content .container .wkc-modules .item{
    display: inline-block;
    width: 150px;
    height: 43px;
    line-height: 43px;
    text-align: center;
    color: #666;
    font-size: 16px;
    border-bottom: 2px #fff solid;
    cursor: pointer;
}
.wkc-content .container .wkc-modules .item:hover{
    color: #0092db;
}
.wkc-content .container .wkc-modules .item.active{
    border-bottom-color: #0092db;
    color: #0092db;
}

.wkc-content .container .wkc-slides .slide{
    display: none;
}
.wkc-content .container .wkc-slides .slide.shown{
    display: block;
}
.wkc-content .container .wkc-slides .slide .course-item{
	width: 278px;
	height: 224px;
    display: inline-block;
    background-color: #fff;
    margin-bottom: 20px;
}
.wkc-content .container .wkc-slides .slide .course-item img{
    height: 156px;
}
.wkc-content .container .wkc-slides .slide .course-mgr{
    margin-right: 24px;
}
.wkc-content .container .wkc-slides .slide .course-item a{
	color:#333;
    display: block;
}
.wkc-content .container .wkc-slides .slide .course-item a:hover{
    color:#0092db;
}
.wkc-content .container .wkc-slides .slide .course-item .course-title{
	width: 278px;
	white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 14px;
    text-indent: 10px;
    margin-top: 10px;
}
.wkc-content .container .wkc-slides .slide .course-item .view-times{
    background: url(../images/wkc-play-ico.png) no-repeat 10px 2px;
    width: 100%;
    height: 14px;
    line-height: 14px;
    font-size: 12px;
    color: #999;
    margin-top: 7px;
    text-indent: 25px;
}
.wkc-play{
    width: 1200px;
    min-width: 1200px;
    margin: 30px auto;
    background-color: #fff;
    border: 1px #ebebeb solid;
    overflow: hidden;
}
.wkc-play .wkc-bread-nav{
    color: #999;
    font-size: 14px;
    height: 45px;
    line-height: 45px;
    text-indent: 10px;
    border-bottom: 1px #ebebeb solid;
}
.wkc-play .wkc-back{
    background: url(../images/wkc-back.png) 20px 20px no-repeat;
    display: inline-block;
    width: 75px;
    height: 75px;
    color: #999;
    line-height: 125px;
    border-right: 1px #ebebeb solid;
    text-align: center;
    font-size: 14px;
    cursor: pointer;
    text-decoration: none;
}
.wkc-play .wkc-back:hover{
    background-color: #f7f7f7;
}
.wkc-play .wkc-video{
    margin: 10px 30px 40px 40px;
    border: 1px #ebebeb solid;
    width: 740px;
    height: 440px;
    float: left;
    border-bottom: none;
    text-align: center;
    line-height: 300px;
}
.wkc-play .wkc-2wm{
    width: 224px;
    float: right;
    margin-right: 65px;
    background-color: #f7f7f7;
    padding: 30px;
    margin-top: 10px;
    height: 380px;
    font-size: 14px;
    border: 1px #ebebeb solid;
}
.wkc-play .wkc-2wm img{
    margin: 60px 35px;
}
.wkc-play .wkc-title{
    color: #666;
    font-size: 26px;
    height: 85px;
    line-height: 80px;
    display: inline-block;
    margin-left: 20px;
    vertical-align: top;
}